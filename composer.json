{
  "name": "ricardokovalski/installments-calculator",
  "description": "Biblioteca para calcular juros em parcelamentos.",
  "type": "library",
  "authors": [
    {
      "name": "Ricardo Kovalski",
      "email": "ricardokovalskicruz@gmail.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "keywords": ["calculations", "calculator", "installment", "installments", "installments-calculator", "interest", "interest-calculator", "interest-rates"],
  "require": {
    "php": ">=5.6",
    "ext-json": "*",
    "ricardokovalski/currency-formatter": "1.0.0-alpha",
    "ricardokovalski/interest-calculation": "1.0.1-alpha"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "scripts": {
    "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
    "fix-style": "php-cs-fixer fix ."
  },
  "autoload": {
    "psr-4": {
      "RicardoKovalski\\InstallmentsCalculator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RicardoKovalski\\InstallmentsCalculator\\Tests\\": "tests/"
    }
  }
}
